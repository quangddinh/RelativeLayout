<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:layout_centerInParent="true"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:id="@+id/tv1"
        android:textSize="30sp"
        android:text="1"
        android:background="#f20"
        android:textColor="#F7F5EE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_toStartOf="@id/tv1"
        android:layout_above="@+id/tv1"
        android:layout_centerInParent="true"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:id="@+id/tv2"
        android:textSize="30sp"
        android:text="2"
        android:background="#3949AB"
        android:textColor="#F7F5EE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_toStartOf="@id/tv1"
        android:layout_below="@+id/tv1"
        android:layout_centerInParent="true"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:id="@+id/tv3"
        android:textSize="30sp"
        android:text="3"
        android:background="#CF4575"
        android:textColor="#F7F5EE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_toEndOf="@id/tv1"
        android:layout_above="@+id/tv1"
        android:layout_centerInParent="true"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:id="@+id/tv4"
        android:textSize="30sp"
        android:text="4"
        android:background="#0C5A53"
        android:textColor="#F7F5EE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_toEndOf="@id/tv1"
        android:layout_below="@+id/tv1"
        android:layout_centerInParent="true"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:id="@+id/tv5"
        android:textSize="30sp"
        android:text="5"
        android:background="#DDA829"
        android:textColor="#F7F5EE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_alignParentStart="true"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:id="@+id/tv6"
        android:textSize="30sp"
        android:text="6"
        android:background="#43A047"
        android:textColor="#F7F5EE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_alignParentEnd="true"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:id="@+id/tv7"
        android:textSize="30sp"
        android:text="7"
        android:background="#7454B8"
        android:textColor="#F7F5EE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:id="@+id/tv8"
        android:textSize="30sp"
        android:text="8"
        android:background="#112F8B"
        android:textColor="#F7F5EE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:id="@+id/tv9"
        android:textSize="30sp"
        android:text="9"
        android:background="#D5E908"
        android:textColor="#F7F5EE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>